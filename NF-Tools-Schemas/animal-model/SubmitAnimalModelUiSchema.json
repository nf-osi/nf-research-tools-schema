{
  "modelName": {
    "ui:widget": "text",
    "ui:placeholder": "Enter the animal model name here"
  },
  "species": {
    "ui:widget": "text",
    "ui:placeholder": "Enter species (e.g., mouse, rat)"
  },
  "strain": {
    "ui:widget": "text",
    "ui:placeholder": "Enter strain of the animal"
  },
  "genotype": {
    "ui:widget": "text",
    "ui:placeholder": "Enter genotype"
  },
  "mutations": {
    "ui:widget": "textarea",
    "ui:options": {
      "rows": 3
    },
    "ui:placeholder": "Enter mutations separated by commas"
  },
  "phenotypes": {
    "ui:widget": "textarea",
    "ui:options": {
      "rows": 3
    },
    "ui:placeholder": "Enter phenotypes separated by commas"
  },
  "availability": {
    "ui:widget": "text",
    "ui:placeholder": "Enter availability status"
  },
  "model_description": {
    "ui:widget": "textarea",
    "ui:options": {
      "rows": 5
    },
    "ui:placeholder": "Provide a detailed description of the animal model"
  },
  "references": {
    "ui:widget": "textarea",
    "ui:options": {
      "rows": 3
    },
    "ui:placeholder": "Enter references (e.g., PubMed ID, DOI) separated by commas"
  },
  "fundingAgency": {
    "ui:widget": "text",
    "ui:placeholder": "Enter the funding agency"
  }
}
