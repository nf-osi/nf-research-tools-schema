{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Submit Antibody",
  "type": "object",
  "properties": {
    "antibodyName": {
      "type": "string",
      "title": "What is the name of the antibody?"
    },
    "synonyms": {
      "type": "string",
      "title": "Are there any synonyms for this name?"
    },
    "targetAntigen": {
      "type": "string",
      "title": "What is the target antigen?"
    },
    "clonality": {
      "type": "string",
      "title": "What is the clonality?",
      "enum": [
        "Monoclonal",
        "Polyclonal"
      ]
    },
    "hostSpecies": {
      "type": "string",
      "title": "What is the host species?"
    },
    "reactiveSpecies": {
      "type": "string",
      "title": "What is the reactive species?"
    },
    "conjugationStatus": {
      "type": "string",
      "title": "Is the antibody conjugated?",
      "enum": [
        "Yes",
        "Nonconjugated"
      ]
    },
    "investigatorName": {
      "type": "string",
      "title": "What is the investigator's name who developed this tool?"
    },
    "investigatorAffiliation": {
      "type": "string",
      "title": "What is the investigator's affiliation who developed this tool?"
    },
    "publicationDOI": {
      "type": "string",
      "title": "If there is a publication associated with the development of this tool, please include the DOI link below."
    },
    "itemAcquisition": {
      "type": "string",
      "title": "How can one acquire this item?",
      "enum": [
        "Contact the Principal Investigator",
        "It's able to be purchased online",
        "Other"
      ]
    },
    "vendor": {
      "type": "string",
      "title": "Please select a vendor you are aware has this item."
    },
    "catalogNumber": {
      "type": "string",
      "title": "What is the catalog number?"
    },
    "catalogURL": {
      "type": "string",
      "title": "What is the catalog URL?"
    }
  },
  "required": [
    "antibodyName",
    "targetAntigen",
    "clonality",
    "hostSpecies",
    "reactiveSpecies",
    "conjugationStatus",
    "investigatorName",
    "investigatorAffiliation"
  ]
}
