{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Submit Antibody",
  "type": "object",
  "properties": {
    "antibodyName": {
      "type": "string",
      "title": "Name of antibody"
    },
    "synonyms": {
      "type": "string",
      "title": "Please add any synonyms for the name"
    },
    "targetAntigen": {
      "type": "string",
      "title": "Target antigen"
    },
    "clonality": {
      "type": "string",
      "title": "Clonality of antibody",
      "enum": [
        "Monoclonal",
        "Polyclonal"
      ]
    },
    "hostSpecies": {
      "type": "string",
      "title": "Host species",
      "enum": [
        "mouse",
        "rabbit"
      ]
    },
    "reactiveSpecies": {
      "type": "string",
      "title": "Reactive species"
      "enum": [
        "mouse",
        "rabbit",
        "human"
      ]
    },
    "conjugationStatus": {
      "type": "string",
      "title": "Is the antibody conjugated?",
      "enum": [
        "Yes",
        "No"
      ]
    },
    "investigatorName": {
      "type": "string",
      "title": "Name of investigator who developed tool"
    },
    "investigatorAffiliation": {
      "type": "string",
      "title": "Affiliation of investigator who developed the tool"
    },
    "publicationDOI": {
      "type": "string",
      "title": "Link to associated publiation"
    },
    "itemAcquisition": {
      "type": "string",
      "title": "How can one acquire this item?",
      "enum": [
        "Contact the Principal Investigator",
        "It's able to be purchased online",
        "Other"
      ]
    }
    "vendor": {
      "type": "string",
      "title": "Please select a vendor you are aware has this item."
    },
    "catalogNumber": {
      "type": "string",
      "title": "What is the catalog number?"
    },
    "catalogURL": {
      "type": "string",
      "title": "What is the catalog URL?"
    }
  },
  "required": [
    "antibodyName",
    "targetAntigen",
    "clonality",
    "hostSpecies",
    "reactiveSpecies",
    "conjugationStatus",
    "investigatorName",
    "investigatorAffiliation"
  ]
}
