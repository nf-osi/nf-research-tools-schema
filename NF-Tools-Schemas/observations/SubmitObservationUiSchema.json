{
  "userInfo": {
    "first_name": {
      "ui:placeholder": "Enter your first name"
    },
    "last_name": {
      "ui:placeholder": "Enter your last name"
    },
    "email": {
      "ui:placeholder": "Enter your email address"
    },
    "institution": {
      "ui:placeholder": "Enter your institution (optional)"
    }
  },
  "observationsSection": {
    "observations": {
      "ui:field": "table",  // Custom field to render observations as a table
      "ui:options": {
        "addButtonText": "Add Another Observation",  // Custom button text
        "itemTitle": "Observation"
      },
      "items": {
        "resourceName": {
          "ui:placeholder": "Enter the name of the resource"
        },
        "observationType": {
          "ui:widget": "select",
          "ui:placeholder": "Select an observation type"
        },
        "details": {
          "ui:widget": "textarea",
          "ui:placeholder": "Enter details of the observation",
          "ui:options": {
            "rows": 2
          }
        },
        "referencePublication": {
          "ui:placeholder": "Enter publication DOI (if available)"
        },
        "fileUpload": {
          "ui:widget": "file"
        }
      }
    }
  }
}
