{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Submit Genetic Reagents",
  "type": "object",
  "properties": {
    "userInfo": {
      "type": "object",
      "title": "Your Information",
      "required": ["first_name", "last_name", "email"],
      "properties": {
        "first_name": {
          "type": "string",
          "title": "First Name"
        },
        "last_name": {
          "type": "string",
          "title": "Last Name"
        },
        "email": {
          "type": "string",
          "title": "Email",
          "format": "email"
        },
        "institution": {
          "type": "string",
          "title": "Institution (Optional)"
        }
      }
    },
    "geneticReagents": {
      "type": "array",
      "title": "Genetic Reagents",
      "items": {
        "type": "object",
        "title": "Genetic Reagent",
        "properties": {
          "geneticReagentName": {
            "type": "string",
            "title": "What is the name of the genetic reagent?"
          },
          "synonyms": {
            "type": "string",
            "title": "Are there any synonyms for it?"
          },
          "description": {
            "type": "string",
            "title": "What's a short description of this genetic reagent (~20 words)?"
          },
          "geneticReagentId": {
            "type": "string",
            "title": "What is the unique identifier for this genetic reagent?"
          },
          "insertName": {
            "type": "string",
            "title": "What is the name of the main gene insert in the plasmid?"
          },
          "insertEntrezId": {
            "type": "string",
            "title": "What is the Entrez gene ID for the insert?"
          },
          "insertSize": {
            "type": "string",
            "title": "What is the size (in bp) of the insert?"
          },
          "insertSpecies": {
            "type": "string",
            "title": "What is the species of the insert?",
            "enum": ["Homosapiens", "Musmusculus", "Rattusnorvegicus"]
          },
          "gRNAshRNASequence": {
            "type": "string",
            "title": "What is the sequence of gRNA/shRNA, if applicable?"
          },
          "nTerminalTag": {
            "type": "string",
            "title": "What tag exists on the N-terminal end, if any?"
          },
          "cTerminalTag": {
            "type": "string",
            "title": "What tag exists on the C-terminal end, if any?"
          },
          "promoter": {
            "type": "string",
            "title": "What promoter is driving the insert expression?"
          },
          "vectorBackbone": {
            "type": "string",
            "title": "What is the name of the vector backbone?"
          },
          "vectorType": {
            "type": "string",
            "title": "What is the primary function of the vector?",
            "enum": [
              "Mammalian Expression",
              "Bacterial Expression",
              "Gateway Entry Clone",
              "Lentiviral",
              "Adenoviral",
              "AAV",
              "RNAi",
              "Luciferase",
              "Cre/Lox",
              "Yeast Expression",
              "Worm Expression",
              "Insect Expression",
              "Plant Expression",
              "Mouse Targeting",
              "CRISPR",
              "TALEN",
              "Synthetic Biology",
              "Transfer Vector",
              "Unspecified",
              "Other"
            ]
          },
          "backboneSize": {
            "type": "string",
            "title": "What is the size of the backbone (without insert)?"
          },
          "totalSize": {
            "type": "string",
            "title": "What is the total size of the plasmid (with insert)?"
          },
          "cloningMethod": {
            "type": "string",
            "title": "How was the vector constructed?",
            "enum": [
              "Restriction Enzyme",
              "TOPO Cloning",
              "Gateway Cloning",
              "Ligation Independent Cloning",
              "Gibson Cloning",
              "Unknown"
            ]
          },
          "5primeCloningSite": {
            "type": "string",
            "title": "What enzyme was used on the 5' end for cloning?"
          },
          "5primeSiteDestroyed": {
            "type": "string",
            "title": "Was the 5' site destroyed during cloning?",
            "enum": ["Yes", "No", "Unknown"]
          },
          "3primeCloningSite": {
            "type": "string",
            "title": "What enzyme was used on the 3' end for cloning?"
          },
          "3primeSiteDestroyed": {
            "type": "string",
            "title": "Was the 3' site destroyed during cloning?",
            "enum": ["Yes", "No", "Unknown"]
          },
          "bacterialResistance": {
            "type": "string",
            "title": "What antibiotic resistance is present?",
            "enum": [
              "Ampicillin",
              "Kanamycin",
              "Chloramphenicol",
              "Tetracycline",
              "Spectinomycin",
              "Hygromycin",
              "Bleocin (Zeocin)",
              "Gentamycin",
              "Streptomycin",
              "Nourseothricin"
            ]
          },
          "selectableMarker": {
            "type": "string",
            "title": "Are there any additional selection markers?",
            "enum": [
              "Neomycin",
              "Puromycin",
              "Hygromycin",
              "Zeocin",
              "Blasticidin",
              "Gentamicin",
              "TRP1",
              "LEU1",
              "URA3",
              "HIS3",
              "Basta",
              "Other"
            ]
          },
          "copyNumber": {
            "type": "string",
            "title": "What is the copy number?",
            "enum": ["High Copy", "Low Copy", "Unknown"]
          },
          "growthTemp": {
            "type": "string",
            "title": "At what temperature should the bacteria be grown?",
            "enum": ["37C", "30C", "Room Temperature"]
          },
          "growthStrain": {
            "type": "string",
            "title": "Which strain of E. Coli should be used?",
            "enum": ["DH5alpha", "DH10B", "NEB Stable", "Ccdb Survival", "Pir1", "Other"]
          },
          "hazardous": {
            "type": "string",
            "title": "Does the plasmid require Biosafety Level 2 or higher?",
            "enum": ["Yes", "No", "Unknown"]
          },
          "mutationTypes": {
            "type": "array",
            "title": "Do any of the mutation types apply?",
            "items": {
              "type": "string",
              "enum": [
                "Disruption caused by insertion of vector",
                "Duplication",
                "Insertion",
                "Insertion of gene trap vector",
                "Intergenic deletion",
                "Intragenic deletion",
                "Inversion",
                "Loss of heterozygosity (unspecified mechanism)",
                "Nucleotide repeat expansion",
                "Nucleotide substitutions",
                "Single point mutation",
                "Translocation",
                "Transposon insertion",
                "Viral insertion",
                "Other"
              ]
            }
          },
          "alleleType": {
            "type": "string",
            "title": "What is the allele type?",
            "enum": [
              "Conditional ready",
              "Constitutively active",
              "Dominant negative",
              "Humanized sequence",
              "Hypomorph",
              "Inducible",
              "Inserted expressed sequence",
              "Knockdown",
              "Modified isoform(s)",
              "No functional change",
              "Null/knockout",
              "RMCE-Ready",
              "Recombinase",
              "Reporter",
              "Transactivator",
              "Transposase",
              "Transposon concatemer",
              "Other"
            ]
          },
          "mutationMethod": {
            "type": "string",
            "title": "What method was used to induce mutation?",
            "enum": [
              "Chemically and radiation induced",
              "Chemically induced (ENU)",
              "Chemically induced (other)",
              "Endonuclease-mediated (CRISPR)",
              "Endonuclease-mediated (TALEN)",
              "Gene trapped",
              "QTL",
              "Radiation induced",
              "Spontaneous",
              "Targeted",
              "Transgenic",
              "Transposon induced",
              "Other"
            ]
          },
          "affectedGeneSymbol": {
            "type": "string",
            "title": "What is the Affected Gene Symbol?"
          },
          "affectedGeneName": {
            "type": "string",
            "title": "What is the Affected Gene Name?"
          },
          "chromosomeNumber": {
            "type": "string",
            "title": "What chromosome number is the affected gene?"
          },
          "proteinVariation": {
            "type": "string",
            "title": "What is the protein variation?"
          },
          "sequenceVariation": {
            "type": "string",
            "title": "What is the sequence variation?"
          },
          "investigatorName": {
            "type": "string",
            "title": "What is the investigator's name who developed this tool?"
          },
          "investigatorAffiliation": {
            "type": "string",
            "title": "What is the investigator's affiliation?"
          },
          "publicationDOI": {
            "type": "string",
            "title": "If there is a publication associated, include the DOI."
          },
          "itemAcquisition": {
            "type": "string",
            "title": "How can one acquire this item?",
            "enum": [
              "Contact the Principal Investigator",
              "It's able to be purchased online",
              "Other"
            ]
          },
          "vendor": {
            "type": "string",
            "title": "Please select a vendor."
          },
          "catalogNumber": {
            "type": "string",
            "title": "What is the catalog number?"
          },
          "catalogURL": {
            "type": "string",
            "title": "What is the catalog URL?"
          }
        },
        "required": [
          "geneticReagentName",
          "description"
        ]
      }
    }
  },
  "required": ["userInfo", "geneticReagents"]
}
